{
  "name": "admin-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start -b swc -w",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/e2e/jest.config.json",
    "test:email": "node scripts/test-email.js",
    "test:integration": "jest --config ./tests/integration/jest.config.json",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "compodoc": "npx @compodoc/compodoc -p tsconfig.json -s src -d compodocs",
    "migration:run": "ts-node -r tsconfig-paths/register scripts/run-migrations.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/database/data-source.ts",
    "migration:show": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:show -d src/database/data-source.ts",
    "tenant:create": "ts-node -r tsconfig-paths/register scripts/create-initial-tenant.ts",
    "tenant:assign": "ts-node -r tsconfig-paths/register scripts/assign-tenant-to-existing-users.ts",
    "tenant:test": "ts-node -r tsconfig-paths/register scripts/test-tenant-isolation.ts",
    "db:reset": "ts-node -r tsconfig-paths/register scripts/reset-database.ts"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@hl8/constants": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@hl8/mail": "workspace:*",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "casbin": "^5.41.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.11",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/testing": "^11.1.9",
    "@nestjs/throttler": "^6.4.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "jest": "^30.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=20"
  }
}